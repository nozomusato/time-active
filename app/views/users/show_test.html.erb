<div class="container">
  <h1>アクション作成</h1>
<h3 class='center'><%=Date.current.strftime("%Y年")%></h3>
<h3 class='center'><%=Date.current.strftime("%m月%d日")%></h3>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <p><button onclick="getMyPlace()">現在地情報を登録</button></p>
      <%= form_with(model: @plan, url: "/plans", local: true, method: :post) do |f| %>
    
    <tbody>
        <%= f.label :メニュー, class:"label-#{yield(:class_text)}" %>
        <%= f.select :menu,{"フリー" => "フリー","勉強" => "勉強","運動" => "運動", "仕事" => "仕事", "食事" => "食事", "睡眠" => "睡眠"},{}, class: "form-control" %>
        <%= f.label :メモ, class:"label-#{yield(:class_text)}" %>
        <%= f.text_field :note, class: "form-control" %>
        <%= f.label :緯度, class:"label-#{yield(:class_text)}" %>
        <%= f.text_field :latitude, id: "result1", class: "form-control" %>
        <%= f.label :経度, class:"label-#{yield(:class_text)}" %>
        <%= f.text_field :longitude, id: "result2",class: "form-control" %>
    </tbody>
    
    <%= f.submit "作成", class: "btn btn-primary btn-block modal-button-space" %>
    <% end %>
  </div>
</div>

<% if @plans.present?%>
  <div class="row">
  
   <div class="col-md-6 col-md-offset-3">
    <h2>実行中...</h2>
    <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
          <th>メニュー</th>
          <th>開始時間</th>
          <th>経過時間</th>
          <th>メモ</th>
          <th>終了</th>
      </tr>
    </thead>
    
    <tbody>
        <% @plans.each do |plan|%>
        <tr>
            <td><%= plan.menu %></td>
            <td><%= plan.created_at.strftime("%Y年%m月%d日 %H:%M")%></td>
            <% total = Time.current - plan.created_at%>
              <td><%= Time.at(total).strftime("%H:%M")%></td>
             <td><%= plan.note%></td>
             <td><%= link_to(plan, method: :delete,data: { confirm: "削除してよろしいですか？" }) do%>
             <i class="fa fa-trash-o fa-2x btn button_delete"></i>
             <% end %>
             </td>
        </tr>
        <% end %>
    <tbody>
    </table>
    </div>
<% end %>
    
  </div><!--class="row"-->
  </div><!--class="container"-->
  
  <!--map1-->
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDIff7wNQW9YbfbdF1mff_msv4CNNF_oRc"></script>

<div id="result"></div>
