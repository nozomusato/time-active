<% provide(:title, '全てのユーザー') %>
<h1>ユーザー一覧</h1>

<div class="col-md-10 col-md-offset-1">
  <%= will_paginate %>
  <table class="table table-condensed table-hover" id="table-users">
    <thead>
      <tr>
        <th><%= User.human_attribute_name :name %></th>
        <th class="center"></th>
        <% if current_user.admin? %>
        <% end %>
      </tr>
    </thead>

    <% @users.each do |user| %>
      <tr>
        <td>
          <% if current_user.admin? %>
            <%= link_to user.name, user %>
          <% else %>
            <%= user.name %>
          <% end %>
        </td>
        
        <td class="center"></td>
        <% if current_user.admin? %>
        <% end %>
        
        <td class="center">
        <% if current_user.admin? && !current_user?(user) %>
          
          <%= link_to(edit_basic_info_user_path(user),remote: true) do %>
           <i class="fa fa-pencil fa-2x btn button_edit"></i>
          <% end %>
          <%= link_to(user, method: :delete,data: { confirm: "削除してよろしいですか？" }) do%>
           <i class="fa fa-trash-o fa-2x btn button_delete"></i>
          <% end %>
          
        <% end %>
        </td>
        
      </tr>
    <% end %>
  </table>
  <%= will_paginate %>
</div>

<!--モーダルウインドウ表示-->
<div id="edit-basic-info" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>