<h1>アクション作成</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <%= form_with(model: @plan, local: true) do |f| %>
    
    <tbody>
        <%= f.label :メニュー, class:"label-#{yield(:class_text)}" %>
        <%= f.select :menu,{"フリー" => "フリー","運動" => "運動", "仕事" => "仕事", "食事" => "食事", "睡眠" => "睡眠"},{}, class: "form-control" %>
        <%= f.label :詳細, class:"label-#{yield(:class_text)}" %>
        <%= f.text_field :note, class: "form-control" %>
    
    </tbody>
    
    <%= f.submit "更新", class: "btn btn-primary btn-block modal-button-space" %>
    <% end %>
  </div>
</div>