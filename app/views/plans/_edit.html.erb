<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
<h1>アクション編集</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <%= form_with(model: @plan,url: "/modal/#{@plan.id}",method: :patch, local: true) do |f| %>
    
    <tbody>
        <%= f.label :メニュー, class:"label-#{yield(:class_text)}" %>
        <%= f.select :menu,{"フリー" => "フリー","勉強" => "勉強","運動" => "運動", "仕事" => "仕事", "食事" => "食事", "睡眠" => "睡眠"},{}, class: "form-control" %>
        <%= f.label :開始時間, class:"label-#{yield(:class_text)}" %>
        <%= f.datetime_field :created_at,default: @plan.created_at, class: "form-control" %>
        
        <%= f.label :終了時間, class:"label-#{yield(:class_text)}" %>
        <% if @plan.finished_at.nil? %>
         <%= f.datetime_field :finished_at, class: "form-control" %>
        <% else @plan.finished_at.present? %>
         <%= f.datetime_field :finished_at,default: @plan.finished_at,class: "form-control" %>
        <% end %>
        
        <%= f.label :メモ, class:"label-#{yield(:class_text)}" %>
        <%= f.text_field :note, class: "form-control" %>
    
    </tbody>
    
    <%= f.submit "更新", class: "btn btn-primary btn-block modal-button-space" %>
    <% end %>
  </div>
</div>
</div>
</div>
</div>